# Lombok configuration for theatre-service
# This file helps configure Lombok behavior for IDE integration

# Ensure consistent code generation across different IDEs
lombok.addLombokGeneratedAnnotation = true

# Make generated methods more IDE-friendly  
lombok.anyConstructor.addConstructorProperties = true

# Note: FindBugs integration disabled to avoid dependency issues

# Configure logging
lombok.log.fieldName = log

# Ensure proper equals/hashCode generation
lombok.equalsAndHashCode.callSuper = call

# Configure builder
lombok.builder.className = Builder