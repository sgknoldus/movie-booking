# Global Lombok configuration for movie-booking-system
# This file ensures consistent Lombok behavior across all modules and IDEs

# Add @lombok.Generated annotation to generated code for better tool support
lombok.addLombokGeneratedAnnotation = true

# Make generated constructors more IDE-friendly  
lombok.anyConstructor.addConstructorProperties = true

# Configure logging
lombok.log.fieldName = log

# Ensure proper equals/hashCode generation
lombok.equalsAndHashCode.callSuper = call

# Configure builder
lombok.builder.className = Builder

# Configure accessors
lombok.accessors.chain = false
lombok.accessors.fluent = false

# Configure copy annotations behavior
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
lombok.copyableAnnotations += com.fasterxml.jackson.annotation.JsonProperty